<h1>Pozos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th colspan="1"></th>
  </tr>

  <% @wells.each do |well| %>
    <tr>
      <td><%= well.name %></td>
      <td><%= link_to 'Mostrar', well_path(well) %></td>
      <td><%= link_to 'Editar', edit_well_path(well) %></td>
      <td><%= link_to 'Eliminar', well_path(well),
                      method: :delete,
                      data: { confirm: '¿Estás seguro?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Nuevo', new_well_path %>