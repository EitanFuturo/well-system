<h1>Yacimientos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th colspan="1"></th>
  </tr>

  <% @fields.each do |field| %>
    <tr>
      <td><%= field.name %></td>
      <td><%= link_to 'Mostrar', field_path(field) %></td>
      <td><%= link_to 'Editar', edit_field_path(field) %></td>
      <td><%= link_to 'Eliminar', field_path(field),
                      method: :delete,
                      data: { confirm: '¿Estás seguro?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Nuevo', new_field_path %> | <%= link_to 'Entidades', welcome_index_path %>